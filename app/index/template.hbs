{{#leaflet-map attributionControl=false lat=32.707003 lng=-117.155778 zoom=13}}
  {{tile-layer url='https://{s}.tiles.mapbox.com/v3/edborden.i7622aec/{z}/{x}/{y}.png'}}
  {{#each model as |location|}}
    {{#unless location.needsVendor}}
      {{location-marker lat=location.lat lng=location.lng pedestriansCount=location.pedestriansFixed spotsCount=location.spotsFixed}}
    {{else}}
      {{#red-marker lat=location.lat lng=location.lng pedestriansCount=location.pedestriansFixed spotsCount=location.spotsFixed}}
        {{blast-button location=location}}
      {{/red-marker}}      
    {{/unless}}
    {{circle-layer radius=30 lat=location.lat lng=location.lng}}
  {{/each}}
{{/leaflet-map}}